meta(charset="iso-8859-1")
h1 {title}

form(method='post', action='/arduino')
	fieldset
	legend Incluir nuevo Arduino

	div.clearfix
	label Arduino
		div.input
			input(name='arduino[nombre]', class='xlarge')

	div.clearfix
	label IP
		div.input
			input(name='arduino[ip]', class='xlarge')

	div.clearfix
		label MAC
		div.input
			input(name='arduino[mac]', class='xlarge')

	div.clearfix
		label Netmask
		div.input
			input(name='arduino[netmask]', class='xlarge')

	div.clearfix
		label Gateway
		div.input
			input(name='arduino[gateway]', class='xlarge')

	div.clearfix
		label DNS
		div.input
			input(name='arduino[dns]', class='xlarge')

	div.clearfix
		label Uso
		div.input
			input(name='arduino[uso]', class='xlarge')

	div.actions
		input(type='submit', value='Guardar', class='btn primary')
		button(type='reset', class='btn') Cancelar
