// arduino.js
//=======================================================================
//extends layout

block content
h1 #{title}
p
  div
  table(border='1')
    tr
      td
        a(href='/arduino/new', class='btn primary') Nuevo Arduino
      td
        a(href='/arduino/rescan', class='btn') Rescan
      td
        a(href='/arduinos', class='btn') Refresh

- if(docs.length)
  table(border='0')
    tr
      th Nombre
      th IP
      th MAC
      th NetMask
      th Gateway
        each arduino in docs
          tr
            td 
              a(href='/arduino/#{arduino.id}/edit') #{arduino.nombre}
            td #{arduino.ip}
            td #{arduino.mac}
            td #{arduino.netmask}
            td #{arduino.gateway}
            td
              a(href='/arduino/#{arduino.id}/del') Borrar
- else
  p No tienes ningun Arduino
